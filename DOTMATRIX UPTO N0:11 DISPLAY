#include <AT89S52.h>
#define COL P0
#define ROW P1

const char col_pixel[11][9]= {{ 0x00,0x38,0x4c,0x54,0x64,0x44,0x38,0x00},
{0x00,0x10,0x30,0x10,0x10,0x10,0x38,0x00},
{0x00,0x38,0x44,0x08,0x10,0x20,0x7C,0x00},
{0x00,0x7C,0x04,0x18,0x04,0x84,0x38,0x00},
{0x00,0x08,0x18,0x28,0x48,0x7C,0x08,0x00},
{0x00,0x7C,0x40,0x78,0x04,0x84,0x38,0x00},
{0x00,0x38,0x40,0x78,0x44,0x44,0x38,0x00},
{0x00,0x7C,0x04,0x08,0x10,0x10,0x10,0x00},
{0x00,0x38,0x44,0x38,0x44,0x44,0x38,0x00},
{0x00,0x38,0x44,0x44,0x3C,0x04,0x38,0x00},
{0X00,0X22,0X65,0X25,0X25,0X25,0X72,0X00},
{0X00,0X24,0X6C,0X24,0X24,0X24,0X7E,0X00}};
const char row_pixel[9]= { 0x80,0x40,0x20,0x10,0x08,0x04,0x02,0x01};

void main()
{
 COL = 0x00;
 ROW = 0x00;
 while(1)
 {
   char i,j;
   for(i=0;i<11;i++){
   for(j=0;j<9;j++){
       COL=col_pixel[i][j];
       ROW=row_pixel[j];
       ROW=0x00;
       }
   }
 }
}
